<form>
    <div class="cart">
        <div class="container">
            <div class="row small-12 columns">
                <div class="cart__items">
                    <div class="cart__top-row row">
                        <div class="small-12 medium-3 large-3 columns cart__col cart__col-1">
                            2 Items
                        </div>
                         <div class="small-4 columns cart__col cart__col-3 show-for-small-only">
                            Product
                        </div>
                        <div class="small-2 medium-1 large-1 columns cart__col cart__col-3">
                            Size
                        </div>
                        <div class="small-3 medium-2 large-2 columns cart__col cart__col-4">
                            Qty
                        </div>
                        <div class="medium-4 large-3 columns cart__col cart__col-2 show-for-medium">
                            More
                        </div>
                        <div class="small-3 medium-2 large-2 columns cart__col cart__col-5">
                            Price
                        </div>
                        <div class="large-1 columns cart__col cart__col-6 show-for-large-only">
                            &nbsp;
                        </div>
                    </div>
                    {% for i in 0..1 %}
                        <div class="cart__title-row row hide-for-large">
                            <div class="small-12 cart__col columns">
                                <a href="#">
                                    Sterling Jacket for Men
                                    <button type="button" class="delete delete--small">Remove</button>
                                </a>
                            </div>
                        </div>
                        <div class="cart__item row">
                            <div class="small-4 medium-3 large-3 columns cart__col cart__col-1">
                                <span class="cart__col__inner">
                                    <a href="#">
                                        <img src="/uploads/product_thumbs/cart-product.png" alt="">
                                        <span class="cart__item__title show-for-large">
                                            Sterling Jacket for Men
                                            <button type="button" class="delete delete--small">Remove</button>
                                        </span>
                                    </a>
                                </span>
                            </div>
                            <div class="small-2 medium-1 large-1 columns cart__col cart__col-3">
                                <span class="cart__col__inner">
                                    M
                                </span>
                            </div>
                            <div class="small-3 medium-2 large-2 columns cart__col cart__col-4">
                                <span class="cart__col__inner">
                                    <div class="qty-options">
                                        <button type="button" class="sub">-</button>
                                        <input type="text" name="qty" title="Quantity" value="1"/>
                                        <button type="button" class="add">+</button>
                                    </div>
                                </span>
                            </div>
                            <div class="small-3 cart__col cart__col-6 columns show-for-small-only">
                                <span class="cart__col__inner">
                                    $195
                                </span>
                            </div>
                            <div class="small-12 medium-4 large-3 columns cart__col cart__col-5">
                                <span class="cart__col__inner">
                                    <fieldset class="checkboxes">
                                        <div class="checkbox-row">
                                            <input id="checkbox-{{ i }}-1" type="checkbox">
                                            <label for="checkbox-{{ i }}-1">
                                                Gift Box <span class="gray">(+$10)</span>
                                            </label>
                                        </div>
                                        <div class="checkbox-row">
                                            <input id="checkbox-{{ i }}-2" type="checkbox">
                                            <label for="checkbox-{{ i }}-2">
                                                Warranty <span class="gray">(+$10)</span>
                                            </label>
                                        </div>
                                    </fieldset>
                                </span>
                            </div>
                            <div class="small-3 medium-2 large-2 columns cart__col cart__col-6 show-for-medium">
                                <span class="cart__col__inner">
                                    $195
                                </span>
                            </div>
                            <div class="large-1 columns cart__col cart__col-7">
                                <span class="cart__col__inner">
                                    <button type="button" class="delete delete--large">Remove</button>
                                </span>
                            </div>
                        </div>
                        <hr class="cart__horizontal-line">
                    {% endfor %}
                </div>
                <div class="cart__total row small-12">
                    <div class="cart__col cart__col__promo-code small-12 medium-8 large-7 columns">
                    <span class="cart__col__inner">
                        <a href="#" class="promo-code-toggle">Enter promo code here</a>
                        <input type="text" class="promo-code-input" name="promoCode"
                               placeholder="Enter promo code here">
                    </span>
                    </div>
                    <div class="cart__col cart__total-label columns small-9 medium-2 large-2">
                    <span class="cart__col__inner">
                        Total
                    </span>
                    </div>
                    <div class="cart__col cart__total-amount columns small-3 medium-2 large-2">
                    <span class="cart__col__inner">
                        $323
                    </span>
                    </div>
                    <div class="cart__col cart__checkout-button columns large-1">
                        <button type="button" class="toggle-checkout-buttons">
                            Checkout <span class="icon-arrow"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="cart__buttons"><button type="button" class="button cart__buttons__credit-card">
                    Credit Card <span class="icon-arrow"></span>
                </button><button type="button" class="button cart__buttons__amazon">
                    <img src="/images/logo-amazon.svg" alt="Amazon"> <span class="icon-arrow"></span>
                </button><button type="button" class="button cart__buttons__paypal">
                    <img src="/images/logo-paypal.svg" alt="PayPal"> <span class="icon-arrow"></span>
                </button></div>
        </div>
    </div>
</form>
