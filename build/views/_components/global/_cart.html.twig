<div class="cart">
    <div class="container">
        <div class="row">
            <div class="small-12 columns">
                <div class="cart__items">
                    <div class="cart__top-row row">
                        <div class="small-5 columns cart__col">
                            2 Items
                        </div>
                        <div class="small-1 columns cart__col">
                            Color
                        </div>
                        <div class="small-1 columns cart__col">
                            Size
                        </div>
                        <div class="small-2 columns cart__col">
                            Qty
                        </div>
                        <div class="small-2 columns cart__col">
                            Price
                        </div>
                        <div class="small-1 columns cart__col">
                            &nbsp;
                        </div>
                    </div>
                    {% for i in 0..1 %}
                        <div class="cart__item row">
                            <div class="small-5 columns cart__col cart__col-1">
                                <span class="cart__col__inner">
                                    <a href="#">
                                        <img src="/uploads/product_thumbs/cart-product.png" alt="">
                                        Sterling Jacket for Men
                                    </a>
                                </span>
                            </div>
                            <div class="small-1 columns cart__col cart__col-2">
                                <span class="cart__col__inner">
                                    <div class="color-options">
                                        <button type="button" name="color" title="blue" value="blue" style="background: #50b3cf;">
                                            <span class="show-for-sr">Order in Blue</span>
                                        </button>
                                    </div>
                                </span>
                            </div>
                            <div class="small-1 columns cart__col cart__col-3">
                                <span class="cart__col__inner">
                                    M
                                </span>
                            </div>
                            <div class="small-2 columns cart__col cart__col-4">
                                <span class="cart__col__inner">
                                    <div class="qty-options">
                                        <button type="button" class="sub">-</button>
                                        <input type="text" name="qty" title="Quantity" value="1" />
                                        <button type="button" class="add">+</button>
                                    </div>
                                </span>
                            </div>
                            <div class="small-2 columns cart__col cart__col-5">
                                <span class="cart__col__inner">
                                    $195
                                </span>
                            </div>
                            <div class="small-1 columns cart__col cart__col-6">
                                <span class="cart__col__inner">
                                    <button type="button" class="delete">
                                        <img src="/images/cart-x.svg" alt="Delete">
                                    </button>
                                </span>
                            </div>
                        </div>
                        <hr class="cart__horizontal-line">
                    {% endfor %}
                </div>
                <div class="cart__total row">
                    <div class="cart__col small-7">
                        <span class="cart__col__inner">
                            <a href="#" class="promo-code-link">
                                Enter promo code here
                            </a>
                        </span>
                    </div>
                    <div class="cart__col cart__total-label columns small-2">
                        <span class="cart__col__inner">
                            Total
                        </span>
                    </div>
                    <div class="cart__col cart__total-amount columns small-2">
                        <span class="cart__col__inner">
                            $323
                        </span>
                    </div>
                    <div class="cart__col cart__checkout-button columns small-1">
                        Checkout >
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
